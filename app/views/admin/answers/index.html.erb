<h1>Listing answers</h1>

<table>
  <tr>
    <th>Question</th>
    <th>User</th>
    <th>Text</th>
    <th>Is accepted</th>
    <th>Accepted by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.question_id %></td>
    <td><%= answer.user_id %></td>
    <td><%= answer.text %></td>
    <td><%= answer.is_accepted %></td>
    <td><%= answer.accepted_by %></td>
    <td><%= link_to 'Show', admin_answer_path(answer) %></td>
    <td><%= link_to 'Edit', edit_admin_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', admin_answer_path(answer), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Answer', new_admin_answer_path %>
